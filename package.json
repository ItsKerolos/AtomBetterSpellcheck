{
  "name": "better-spellcheck",
  "main": "./lib/better-spellcheck.js",
  "version": "0.1.0",
  "description": "Spellchecking and corrections for Atom",
  "author": "Kerolos Zaki <kerolos4zaki@gmail.com>",
  "license": "MIT",
  "engines": {
    "atom": ">=1.0.0 <2.0.0"
  },
  "keywords": [
    "spellcheck",
    "spell-check"
  ],
  "repository": "https://gitlab.com/ker0olos/atom-better-spellcheck",
  "configSchema": {
    "personal": {
      "title": "Known Words",
      "type": "array",
      "description": "List of words to ignore during spellchecking",
      "default": [],
      "order": 1
    },
    "enabledGrammars": {
      "title": "Enabled Grammars",
      "type": "array",
      "description": "List of the grammars that will be spellchecked",
      "default": [
        "c",
        "c++",
        "c#",
        "coffeescript",
        "css",
        "go",
        "html",
        "pug",
        "javascript",
        "jsdoc",
        "json",
        "less",
        "git commit message",
        "git rebase message",
        "github markdown",
        "php",
        "objective-c",
        "objective-c++",
        "plain text",
        "python",
        "ruby",
        "ruby on rails",
        "scss",
        "typescript",
        "typescriptreact",
        "xml",
        "yaml"
      ],
      "order": 2
    },
    "ignorePaths": {
      "title": "Ignore Paths",
      "type": "array",
      "description": "List of paths/files to ignore",
      "default": [
        "**/.git/**",
        "**/node_modules/**",
        "**/package-lock.json"
      ],
      "order": 3
    },
    "characterLimit": {
      "title": "Character Limit",
      "type": "integer",
      "description": "If a file has more than or equal to this character limit it won't be spellchecked",
      "default": 25000,
      "minimum": 1,
      "order": 4
    }
  },
  "dependencies": {
    "minimatch": "^3.0.4",
    "nspell": "^2.1.1"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.1",
    "eslint": "^5.10.0"
  }
}
